<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="content">
        <block class="Magento\Framework\View\Element\Text" name="block_identifier">
            <arguments>
                <argument translate="true" name="text" xsi:type="string">Some text</argument>
            </arguments>
        </block>
    </referenceContainer>
    <referenceContainer name="content">
        <block class="Astrio\TrainingModule1\Block\Block5" name="say_something_display" template="Astrio_TrainingModule1::template5.phtml" />
    </referenceContainer>
    <referenceBlock name="page.main.title">
        <action method="setPageTitle">
            <argument translate="true" name="title" xsi:type="string">Мой заголовок</argument>
        </action>
    </referenceBlock>
    <referenceBlock name="display_something" remove="true"/>

    <referenceBlock name="catalog.topnav">
        <block class="Magento\Framework\View\Element\Html\Link\Current" name="something-link">
            <arguments>
                <argument name="label" xsi:type="string">Test page</argument>
                <argument name="path" xsi:type="string">trainingmodule1/mycontroller/test</argument>
            </arguments>
        </block>
    </referenceBlock>


</page>
