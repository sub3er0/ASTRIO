<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="content.top">
        <block class="Magento\Framework\View\Element\Template" name="display_something" template="Astrio_TrainingModule1::template7.phtml" />
    </referenceContainer>

    <referenceBlock name="display_something">
        <arguments>
            <argument name="background_color" xsi:type="string">lightskyblue</argument>
        </arguments>
    </referenceBlock>

    <referenceBlock name="catalog.topnav">
        <block class="Magento\Framework\View\Element\Html\Link\Current" name="something-link">
            <arguments>
                <argument name="label" xsi:type="string">Test page</argument>
                <argument name="path" xsi:type="string">trainingmodule1/mycontroller/test</argument>
            </arguments>
        </block>
    </referenceBlock>
</page>
