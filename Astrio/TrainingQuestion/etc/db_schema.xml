<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="training_question" resource="default" engine="innodb" comment="questions table">
        <column xsi:type="smallint" name="question_id" padding="6" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="smallint" name="store_id"  unsigned="true" nullable="false" identity="false"
                comment="store ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Block Title"/>
        <column xsi:type="text" name="content" nullable="true" comment="Question Content"/>
        <column xsi:type="timestamp" name="creation_time" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Block Creation Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="question_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="TRAINING_QUESTION_STORE_ID_STORE_STORE_ID" table="training_question"
                    column="store_id" referenceTable="store" referenceColumn="store_id" onDelete="CASCADE"/>
    </table>
</schema>
